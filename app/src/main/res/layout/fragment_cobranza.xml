<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/plomo"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/blanco"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
        <TextView
            android:id="@+id/cobranza_titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="VENDEDOR: "
            android:textColor="@color/negro"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/nombreVendedor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="VENDEDOR"
            android:textColor="@color/negro"
            />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/plomo"></LinearLayout>

        <LinearLayout
            android:id="@+id/lldeuda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtDetalleDeuda"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="6dp"
                android:paddingTop="6dp"
                android:text="Deuda Total: "
                android:textColor="@color/celeste" />

            <TextView
                android:id="@+id/txtDeudaTotal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingBottom="6dp"
                android:paddingTop="6dp"
                android:text=""

                android:textColor="@color/negro" />
        </LinearLayout>



        <LinearLayout
            android:id="@+id/llcorriente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtDetalleCorriente"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="6dp"
                android:paddingTop="6dp"
                android:text="Dueda Corriente: "
                android:textColor="@color/celeste" />

            <TextView
                android:id="@+id/txtDeudaCorriente"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingBottom="6dp"
                android:paddingTop="6dp"

                android:textColor="@color/negro" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llmorosa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtDetalleMorosa"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="6dp"
                android:paddingTop="6dp"
                android:text="Deuda Morosa: "
                android:textColor="@color/celeste" />

            <TextView
                android:id="@+id/txtDeudaMorosa"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingBottom="6dp"
                android:paddingTop="6dp"

                android:textColor="@color/negro" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llletras"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtDetalleLetras"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="6dp"
                android:paddingTop="6dp"
                android:text="Letras No Vencidas: "
                android:textColor="@color/celeste" />

            <TextView
                android:id="@+id/txtDeudaLetras"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingBottom="6dp"
                android:paddingTop="6dp"

                android:textColor="@color/negro" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llvencida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtDetalleVencidas"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="6dp"
                android:paddingTop="6dp"
                android:text="Letras Vencidas: "
                android:textColor="@color/celeste" />

            <TextView
                android:id="@+id/txtDeudaVencida"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingBottom="6dp"
                android:paddingTop="6dp"

                android:textColor="@color/negro" />
        </LinearLayout>




    </LinearLayout>
</LinearLayout>